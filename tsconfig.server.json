{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "lib": [
      "ESNext",
      "dom"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "strictNullChecks": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "noEmitOnError": true
  },
  "include": [
    "admin",
    "server",
    "server/**/*.json",
    "common.d.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/*.test.ts"
  ]
}
